# .env 文件内容

# 设置使用本地 Ollama
OLLAMA_BASE_URL=http://localhost:11434
# 向量维度 (注意：nomic-embed-text 是 768，OpenAI 是 1536)
# nomic-embed-text: 768
# BAAI/bge-large-zh-v1.5: 1024
# BAAI/bge-base-zh-v1.5: 768
# BAAI/bge-small-zh-v1.5: 512
# BGE-M3 / BGE-Large: 1024
EMBEDDING_DIM=1024
# 大语言模型名称
LLM_MODEL_NAME=qwen2.5:3b
# ReRank模型固定BAAI/bge-reranker-base自带在models目录下，无需配置

# 数据库配置 (如果用户用自己的库，改这里即可)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=knowledge_base
DB_USER=admin
DB_PASSWORD=admin_password

# LDAP 服务器地址 (如果需要认证)
# 示例: LDAP_SERVER=ldap://ldap.mycompany.com
LDAP_DOMAIN=mycompany
LDAP_BASE_DN=dc=mycompany,dc=com
LDAP_ORGANISATION=MyCompany
LDAP_ADMIN_PASSWORD=admin
LDAP_SERVER=ldap://localhost:389
LDAP_ADMIN_DN=cn=admin,dc=mycompany,dc=com

# JWT 密钥 (用于生成和验证 JWT 令牌)
JWT_SECRET_KEY=YOUR_SECRET_KEY_HERE